{% extends base %}
{% block title %}Calendar - {{ store.name }}{% endblock %}
{% block content %}

<div class="row">
    <div class="col-md-12" style="border-bottom: 1px solid #eeeeee">
        <h1>Calendar</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form role="form" method="GET">
            <h4>Please check the webinar details.</h4>
            <p><strong>Webinar:</strong> <a href="{{ webinar.topic.url }}" target="_blank">{{ webinar.topic.title | escape }}</a></p>
            <p><strong>Time:</strong> {{ webinar.startTime | local_time }}</p>
            <p><strong>Duration:</strong> {{ webinar.topic.duration }} minutes</p>
            <p><a class="btn btn-primary" role="button" href="/webinar/{{webinar.id}}/calendar?code={{webinar.secureCode}}&download=true&accessby={{webinar.accessBy}}"><i class="fa fa-download"></i> Download</a></p>
        </form>
    </div>
</div>
    
{% endblock %}