{% extends empty-base %}
{% block title %}Login - {{ store.name }}{% endblock %}
{% block content %}

<form class="form-signin" role="form" method="POST">
    <div class="store-logo">
        <a href="/" title="{{ store.name | escape }}">
            {% if store.selectedLogo %}
            {{ store.selectedLogo | img_tag:store.name, store.selectedLogoClass }}
            {% else %}
            <h3>{{ store.name| escape }}</h3>
            {% endif %}
        </a>
    </div>
    <h3 class="form-signin-heading">Please log in</h3>
    <input type="email" name="Email" class="form-control first" placeholder="Email address" value="{{ email }}" required autofocus>
    <input type="password" name="Password" class="form-control last" placeholder="Password" required>
    <input type="hidden" name="TimeZone" id="TimeZoneField" />
    {% if errorMessage %}
    <div class="alert alert-danger">{{ errorMessage }}</div>
    {% endif %}
    <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
    <div class="text-center">
        <a href="/login/forgotpassword" class="btn btn-link">Forgot password?</a>
    </div>
</form>    

{% endblock %}

{% block scripts %}
<script>
    $(function() {
        $('#TimeZoneField').val(jstz.determine().name());
    })
</script>
{% endblock %}